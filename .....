<!-- JS FOR INTERACTIVITY + CONFETTI -->
<script>
  function startSurprise() {
    document.getElementById('welcome').style.display = 'none';
    const main = document.getElementById('main-content');
    main.classList.remove('hidden');
    
    // Show each section one by one
    setTimeout(() => document.getElementById('message').classList.add('show'), 500);
    setTimeout(() => document.getElementById('slider').classList.add('show'), 1500);
    setTimeout(() => document.getElementById('reasons').classList.add('show'), 2500);
    setTimeout(() => document.getElementById('gift').classList.add('show'), 3500);
    setTimeout(() => document.getElementById('ending').classList.add('show'), 4500);

    launchConfetti();
  }

  function revealSurprise() {
    document.getElementById('surprise').style.display = 'block';
  }

  // Confetti Generator
  function launchConfetti() {
    for (let i = 0; i < 100; i++) {
      let conf = document.createElement('div');
      conf.style.position = 'fixed';
      conf.style.top = Math.random() * window.innerHeight + 'px';
      conf.style.left = Math.random() * window.innerWidth + 'px';
      conf.style.width = '10px';
      conf.style.height = '10px';
      conf.style.backgroundColor = '#' + Math.floor(Math.random()*16777215).toString(16);
      conf.style.opacity = '0.7';
      conf.style.borderRadius = '50%';
      conf.style.zIndex = 9999;
      conf.style.animation = 'fall 3s linear infinite';
      document.body.appendChild(conf);

      setTimeout(() => conf.remove(), 3000);
    }
  }

  // Confetti Animation
  const style = document.createElement('style');
  style.innerHTML = `
    @keyframes fall {
      to {
        transform: translateY(100vh) rotate(360deg);
        opacity: 0;
      }
    }
  `;
  document.head.appendChild(style);
</script>

